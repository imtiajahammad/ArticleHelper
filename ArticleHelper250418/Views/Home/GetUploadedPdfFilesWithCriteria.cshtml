      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="~/customDesign/css/ViewDepartmentsCss.css" rel="stylesheet" />

</head>
<body>
    <br />
    <br />
    <h2 align="center">Existing Criteria</h2>
    <h3 align="center">Choose a criteria and upload your paper</h3>
    @*<div align="center">
            @if (ViewBag.MessageViewDepartments != null)
            {
                <span>@ViewBag.MessageViewDepartments</span>
            }
            <br />

        </div>*@
    <br />


    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <br />


                <div class="col-lg-4">

                    <h4 align="center">Criteria One</h4>
                    <h5>Characteristics:</h5>
                    <ul>
                        <li>General Font:Times New Roman</li>
                        <li>Athors Section</li>
                        <li>Abstract Section</li>
                        <li>Keywords Section</li>
                        <li>Main Headings</li>
                        <li>Sub Headings under Main Headings</li>
                        <li>Reference Section</li>
                        <li>Authors Profile Section</li>

                    </ul>
                </div>
                <div class="col-lg-4">
                    <h4 align="center">Criteria Two</h4>
                    <h5>Characteristics:</h5>
                    <ul>
                        <li>General Font:Times New Roman</li>
                        <li>Athors Section</li>
                        <li>Abstract Section</li>
                        <li>Keywords Section</li>
                        <li>Main Headings</li>
                        <li>Sub Headings under Main Headings</li>
                        <li>Acknowledgement Section</li>
                        <li>Reference Section</li>
                        <li>Authors Biography Section</li>

                    </ul>
                </div>
                <div class="col-lg-4">
                    <h4 align="center">Criteria Three</h4>
                    <h5>Characteristics:</h5>
                    <ul>
                        <li>General Font:Times New Roman</li>
                        <li>Athors Section</li>
                        <li>Abstract Section</li>
                        <li>Keywords Section</li>
                        <li>Main Headings</li>
                        <li>Sub Headings under Main Headings</li>
                        <li>Paragaraph Portions under Sub Headings</li>
                        <li>Headings under Paragaraph Portions</li>
                        <li>Acknowledgement Section</li>
                        <li>Reference Section</li>
                    </ul>
                </div>

            </div>

            <div class="col-md-12">
                <br />
                <br />
                <h2 align="center">Upload Your Paper/Papers in Pdf Format</h2>
                <br />
                <div> 
                    <form action="SpecificCriteriaPaperShow" method="post" enctype="multipart/form-data">

                        <input type="radio" name="criteriaNo" value="1" checked="checked"> Criteria One<br>
                        <input type="radio" name="criteriaNo" value="2">Criteria Two<br>
                        <input type="radio" name="criteriaNo" value="3">Criteria Three<br>
                        <br />
                        <input type="file" multiple="multiple" name="File" value="System.WebHttpPostedFileWrapper" />
                        <br />
                        <input type="submit" value="Submit" />
                    </form>
                </div>

            </div>
        </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/bootstrap-3.3.7/js/bootstrap.min.js"></script>

</body>
</html>